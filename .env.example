# Core providers
APOLLO_API_KEY=your_apollo_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
APIFY_API_TOKEN=your_apify_api_token_here
PERPLEXITY_API_KEY=your_perplexity_api_key_here
FIRECRAWL_API_KEY=your_firecrawl_api_key_here
OLLAMA_API_BASE_URL=
OLLAMA_API_KEY=
OLLAMA_MODEL_RESEARCH=llama3.1:8b-instruct
OLLAMA_MODEL_CONTENT=llama3.1:8b-instruct
OLLAMA_MODEL_ASSISTANT=llama3.1:8b-instruct
# Default timeout for Ollama requests.
# Recommended: 60-120s for large models/long tasks, 15-30s for small models.
OLLAMA_TIMEOUT_SECONDS=60
OLLAMA_ASSISTANT_FALLBACK_ENABLED=true

# Intent provider (mock|bombora|6sense|none)
INTENT_PROVIDER=mock
INTENT_PROVIDER_API_KEY=your_intent_provider_api_key_here
INTENT_PROVIDER_BASE_URL=https://api.vendor.com

# Database
DATABASE_URL=sqlite:///./prospect.db

# Admin API auth
# IMPORTANT: Choose strong credentials and never commit real secrets to version control.
ADMIN_USERNAME=<your-admin-username>
ADMIN_PASSWORD=<your-secure-password>
ADMIN_AUTH_MODE=hybrid
# JWT_SECRET MUST be a cryptographically-random string.
# - Minimum 32 characters (64+ recommended for higher entropy).
# - Generate securely: `python -c "import secrets; print(secrets.token_urlsafe(64))"` or via a KMS/secrets manager.
# - Do NOT use predictable values (e.g., "secret", "changeme").
# - Must NOT be committed to source control. Rotate regularly and keep separate per environment.
JWT_SECRET=<replace-with-long-random-secret>
JWT_ACCESS_TTL_MINUTES=15
JWT_REFRESH_TTL_DAYS=7
AUTH_COOKIE_SECURE=auto
# Required for encrypted admin secret storage (Fernet key).
# Generate with:
# python -c "import base64, os; print(base64.urlsafe_b64encode(os.urandom(32)).decode())"
APP_ENCRYPTION_KEY=<replace-with-fernet-key>

# Runtime env (development|production)
APP_ENV=development

# Admin API security/network
ADMIN_CORS_ALLOW_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
ADMIN_RATE_LIMIT_PER_MINUTE=120
ADMIN_RATE_LIMIT_WINDOW_SECONDS=60

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Frontend (Next.js)
API_BASE_URL=http://localhost:8000
# [DEPRECATED] ADMIN_AUTH is no longer used directly.
# Authentication is handled at runtime via ADMIN_USERNAME and ADMIN_PASSWORD.
# If both ADMIN_AUTH and ADMIN_USERNAME/ADMIN_PASSWORD are set, the runtime
# will log a warning and ADMIN_USERNAME/ADMIN_PASSWORD take precedence.
# ADMIN_AUTH=<do-not-set>
PROXY_UPSTREAM_TIMEOUT_MS=20000

# Khoj AI Assistant (Prospect AI)
KHOJ_API_BASE_URL=http://localhost:42110
KHOJ_API_BEARER_TOKEN=

# Payment (Stripe)
STRIPE_API_KEY=sk_test_...
STRIPE_PRICE_ID_OPTION_1=price_...
STRIPE_PRICE_ID_OPTION_2=price_...
DEMO_MODE=false
